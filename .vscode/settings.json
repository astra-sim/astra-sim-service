{
    "window.title": "ASTRA-sim Service: ${activeEditorShort}${separator}${rootName}${separator}${profileName}",
    "python.testing.pytestArgs": [
        "-s",
        "client-scripts/tests/",
        "service/tests/",
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.exclude": [
        "**/build"
    ],
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${containerWorkspaceFolder}/client-scripts,${containerWorkspaceFolder}/client-scripts/utils, ${containerWorkspaceFolder}/models, ${containerWorkspaceFolder}/service,${containerWorkspaceFolder}/service/astra_server",
    },
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/*.pyc": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "black-formatter.args": [
        "--line-length=110"
    ],
    "python.languageServer": "Pylance",
    "python.linting.pylintUseMinimalCheckers": false,
    "editor.rulers": [
        110
    ],
    "python.REPL.enableREPLSmartSend": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python-envs.defaultEnvManager": "ms-python.python:system",
    "python-envs.pythonProjects": []
}